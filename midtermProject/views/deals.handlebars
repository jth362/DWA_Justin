<!-- Header -->
<!-- Logo -->
    <h1 class="logo heading"><a href="../search" class="heading">CheapEats</a></h1>

 <!-- Nav buttons-->
<ul class="nav nav-pills navbar-right">
  <li role="presentation" class="active"><a href="deals" class="navbutton">View Deals</a></li>
  <li role="presentation" class="active"><a href="deals/add" class="navbutton">Submit a Deal</a></li>
  <li role="presentation" class="active"><a href="map" class="navbutton">Search the Map</a></li>
</ul>

 <!-- Loads each deal -->
{{#each deals}}

<div class="deals">
<div class="row" id="deal">
  <div class="col-sm-9">
   <h1><a href="/deals/{{slug}}" class="dealhead">{{name}}</a></h1>
    <div class="row">
      <div class="col-xs-8 col-sm-6">
        <p>Address: {{address}}</p>
      </div>
        <div class="col-xs-4 col-sm-6">
        <p>Price: ${{price}}.00</p>
      </div>
      <div class="col-xs-4 col-sm-6">
        <p>Categories: {{category}}</p>
      </div>
      <div class="col-sm-9">
        <p>Description: {{description}}</p>
        </div>
        {{#if imageFilename}}
      <img style="height: 325px; width: 325px; margin-left:90%; margin-top: -160px;margin-bottom: 40px;" src="/uploads/{{imageFilename}}">
    {{/if}}
      
    </div>
  </div>
</div>
</div>

{{/each}}

