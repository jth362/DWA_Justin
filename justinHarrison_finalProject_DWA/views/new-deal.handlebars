

<!-- Form -->

<div class="form" style=" background-color:cornsilk; margin-left: 10%; margin-right: 10%; margin-top: 1%; border-radius: 10px;  font-size: 18px; padding: 2%;">
<form action="/deals/add" method="post" enctype="multipart/form-data">
  
  <div class="row">
  <div class="form-group col-md-9">
  <label for="name" class="submitForm">Name: </label>
  <input type="text" class="form-control" name="name" id="name">
  </div>

   <div class="form-group col-md-3">
  <label for="price">Price ($): </label>
  <input type="number" class="form-control" name="price" min="0" max="10" id="price">
       </div>
      
  </div>
    
  <div class="row">
  <div class="form-group col-md-11">
  <label for="address">Address: </label>
  <input type="text" class="form-control" placeholder="Please enter the full address with no commas (Street Address City State Zipcode)" name="address" id="address">
    </div>
   </div>
    
   <div class="row">
   <div class="form-group col-md-11">
   <label for="description">Description: </label>
  <input type="text" class="form-control" name="description" id="description">
      </div>
    </div>
    
    <div class="row">
   <div class="form-group col-md-7">
  <label for="tags">Categories (comma separated): </label>
  <input type="text" class="form-control" name="tags" id="tags">
       </div>

  <div class="form-group col-md-2">
  <label for="image">Image: </label>
  <input id="image" class="form-control-file" type="file" name="image" accepts="image/*">
       </div>
    </div>
    
    <button class="btn btn-default submit" type="submit">Submit</button>
</form>
</div>


