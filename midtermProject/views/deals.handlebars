 <button type="button" class="btn btn-default pull-right head" id="headerBtn"><a href="deals/add">Submit a Deal</a></button>
    <button type="button" class="btn btn-default pull-right head" id="headerBtn"><a href="map">Search the Map</a></button>
    <h1 class="logo heading"><a href="../search" class="heading">CheapEats</a></h1>
{{#each deals}}

<div class="deals">
<div class="row" id="deal">
  <div class="col-sm-9">
   <h1><a href="deals/{{slug}}">{{name}}</a></h1>
    <div class="row">
      <div class="col-xs-8 col-sm-6">
        <p>Address: {{address}}</p>
      </div>
        <div class="col-xs-4 col-sm-6">
        <p>${{price}}.00</p>
      </div>
      <div class="col-xs-4 col-sm-6">
        <p>Categories: {{category}}</p>
      </div>
      <div class="col-sm-9">
        <p>Description:{{description}}</p>
        </div>
        {{#if imageFilename}}
      <img style="height: 250px; width: 250px; margin-left:90%; margin-top: -110px;margin-bottom: 40px;" src="/uploads/{{imageFilename}}">
    {{/if}}
      
    </div>
  </div>
</div>
</div>

{{/each}}

